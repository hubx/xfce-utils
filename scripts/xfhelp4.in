if [ "x$BROWSER" = "x" ]
then
  BROWSER="@BROWSER_DEFAULT@"
fi

HELP_DIR="@datadir@/xfce4/doc/"

if [ ! x"$1" = x"" ]; then
    HELP_FILE="$1"
else
    HELP_FILE="index.html"
fi

if [ -r "$HELP_DIR/$LANG/$HELP_FILE" ]
then
  URL="$HELP_DIR/$LANG/$HELP_FILE"
elif [ -r "$HELP_DIR/C/$HELP_FILE" ]
then
  URL="$HELP_DIR/C/$HELP_FILE"
else 
  URL="$HELP_DIR/C/index.html"
fi

case $BROWSER in
    communicator*|netscape|mozilla*|phoenix*)
	$BROWSER -remote openurl\(file://"$URL",new-window\) || \
		$BROWSER "$URL"    
	;;
    opera*)
    	$BROWSER -remote openURL\(file://"$URL",new-window\) || \
		$BROWSER "$URL"
	;;
    *)
    	$BROWSER file://"$URL"
	;;
esac

if [ $? -ne 0 ]; then
	xmessage -center -file - -title Error <<EOF
Unable to execute $BROWSER. Online help
is not available.
EOF
	exit 1
fi

exit 0

